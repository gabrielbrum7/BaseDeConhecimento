package com.loiane.cursojava.aula10;

public class Variaveis {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		int idade = 20;
		String nome = "Gabriel";
		String nomeDoMeuCachorro = "Dog";
		
		//Não é (convenção Java) comum usar no Java, mas pode usar:
		
		int _idade;
		int $idade;
		String ano2014;
		
		String nome_do_meu_cachorro;
		String NomeDoMeuCachorro;
	
		idade = 25;
		
		//System.out.println("Idade = " + idade);
		
		//Má prática
		int x = 10;
		String b = "Gabriel";
		//É importante ter um significado, a variável.
		
		//Tipos Primitivos
		//Char
		
		
		//
		char a = 97; // 
		//char o = 'o';
		
		//System.out.println(A + ' ' + o);
		//System.out.println(a);
		//
		
		
		//Repare que são códigos decimais da tabela ASCII. Para isso é necessário escrever sem aspas simples.
		char o = 111;
		char i = 105;
		
		System.out.println("" + o + i); //Para isso se coloca essa aspas duplas, pois se não ele soma os dos valores,
		//veja abaixo:
		System.out.println(o + i);
		//
		
		char interrogacao = Ux003F;
		System.out.println(interrogacao);
		
	}

}
